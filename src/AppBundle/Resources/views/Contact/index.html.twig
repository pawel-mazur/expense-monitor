{% extends 'base.html.twig' %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr class="active">
                    <th>{{ 'model._common.name' | trans }}</th>
                    <th>{{ 'model.operation._title_plural' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td><a href="{{ path('contact_edit', {'contact': contact.id}) }}">{{ contact.name }}</a></td>
                    <td><a href="{{ path('operation_index', {'contact': contact.id}) }}">{{ contact.operations.count }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
